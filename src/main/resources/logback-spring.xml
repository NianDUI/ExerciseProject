<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <!--路径-->
    <define name="logDir" class="top.niandui.common.uitls.GetInfo"/>
    <!--IP-->
    <define name="ip" class="top.niandui.common.uitls.GetInfo"/>
    <!--服务名-->
    <define name="applicationName" class="top.niandui.common.uitls.GetInfo"/>

    <appender name="consoleLog" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %highlight(%-5level) %magenta([%thread]) %cyan(%logger{36}) - %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="webSocketLog" class="top.niandui.log.WebSocketAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>{"date":"%d{yyyy-MM-dd HH:mm:ss.SSS}","level":"%-5level","thread":"[%thread]","logger":"%logger{36}"}</pattern>
        </encoder>
    </appender>
    <appender name="fileInfoLog" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logDir}/${applicationName}/${applicationName}.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder> <!--滚动策略 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy"> <!--路径 -->
            <fileNamePattern>${logDir}/${applicationName}/${applicationName}-%d.log.gz</fileNamePattern>
            <maxHistory>30</maxHistory><!-- 只保存30天的日志文件 -->
        </rollingPolicy>
    </appender>
    <root level="info">
        <appender-ref ref="consoleLog"/>
        <appender-ref ref="webSocketLog"/>
        <appender-ref ref="fileInfoLog"/>
    </root>

    <!--这里配置自己的dao（mybaties mapper接口）的包路径-->
    <logger name="top.niandui.dao" level="DEBUG"/>
</configuration>
